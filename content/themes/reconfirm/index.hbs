{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

 {{! Search section and tag list }}
<div class="search-container">
    <form id="nav-search-form" action="{{@blog.url}}/search" method="get" >
        <span class="search-header"> What are you looking for?</span>
        <input type="text" class="homepage-search-input" placeholder="Keyword Search">
    </form>
</div>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">
    <div class="row no-margin">

        <div class="tag-list col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
            <a href="#" class="active">ALL</a>
            {{#get "tags" limit="all"}}
                {{#foreach tags}}
                    <a href="/tag/{{slug}}">{{name}}</a>
                {{/foreach}}
            {{/get}}
        </div>

        {{#get "posts" limit="1" filter="featured:true" as |featured|}}
            {{#foreach featured}}
            <div class="col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8 posts-container">
                <article class="{{post_class}}">
                    <header class="post-header">
                        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                    </header>
                    <section class="post-excerpt">
                        <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
                    </section>
                    <footer class="post-meta">
                        {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
                        {{author}}
                        {{tags prefix=" on "}}
                        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                    </footer>
                </article>
            </div>
            {{/foreach}}
         {{/get}}
     </div>

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
