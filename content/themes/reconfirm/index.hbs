{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

 {{! Search section and tag list }}
<div class="search-container">
    <form id="nav-search-form" action="{{@blog.url}}/search" method="get" >
        <span class="search-header"> What are you looking for?</span>
        <div class="form-group has-feedback">
            <input type="text" class="homepage-search-input input-light" placeholder="Keyword search">
            <i class="glyphicon glyphicon-search form-control-feedback"></i>
        </div>
    </form>
</div>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">
  <div class="row no-margin">
    <div class="col-xs-offset-1 col-xs-10 col-lg-offset-2 col-lg-8 tag-list">
      <a href="#" class="active">ALL</a>
      {{#get "tags" limit="all"}}
        {{#foreach tags}}
          <a href="/tag/{{slug}}">{{name}}</a>
        {{/foreach}}
      {{/get}}
    </div>
  </div>

  {{! The tag below includes the post loop - partials/loop.hbs }}
  {{> "loop"}}
</main>
